@{
    ViewBag.Titre = "Bienvenue";
    ViewBag.Identification = "Vous êtes loggué :";
}

<h4>@ViewBag.Identification</h4>
@if (Session["usagerCourriel"] != null && Session["usagerCourriel"].ToString() != "")
{
    var usagerLoggue = Session["usagerCourriel"].ToString();
    <h3 id="usagerLogue">@usagerLoggue</h3>
}
else
{
    <h4>Loguez-vous pour commencer!</h4>
}

<ul>   
    <li>@Html.ActionLink("À Propos", "APropos", "Accueil")</li>
    <li>@Html.ActionLink("Contact", "Contact", "Accueil")</li>
    <li>@Html.ActionLink("S'inscrire", "Create", "Supporteur")</li>
    <li>@Html.ActionLink("Se Logguer", "Login", "Login")</li>
</ul>

<script>
    function showInfo(button, id) {
        var button = button;
        var id = id;
        var infos = document.getElementById(id);
        if (infos.style.display !== 'none') {
            infos.style.display = 'none';
            button.innerHTML = "En Savoir Plus";
        }
        else {
            infos.style.display = 'block';
            button.innerHTML = "Fermer";
        }
    }
</script>

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Titre</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <h4>
                Fini la vente de produits !
                Fini les levées de fonds épuisantes !
                Fini la sollicitation porte-à-porte !
                Fini la manipulation d’argent !
            </h4>
        </div>
    </section>
}


