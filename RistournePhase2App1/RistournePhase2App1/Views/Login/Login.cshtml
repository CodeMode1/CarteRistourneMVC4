@model RistournePhase2App1.Models.Supporteur


<section id="loginForm">
    <h2>Se Connecter</h2>
    @if (ViewBag.oublieMotPasse == true)
    {
        @Html.ActionLink("Vous avez oublié votre mot de passe ?", "ResetMotPasse", "ResetMotPasse")
        //http://stackoverflow.com/questions/13225786/passing-multiple-parameters-from-url-to-html-actionlink
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>

            <legend>Entrez vos informations</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.Courriel)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Courriel)
                @Html.ValidationMessageFor(model => model.Courriel)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.MotPasse)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.MotPasse)
                @Html.ValidationMessageFor(model => model.MotPasse)
            </div>
 
            <input type="submit" value="Se Loguer" />
        </fieldset>
        <h4>
            @Html.ActionLink("S'enregistrer", "Create", "Supporteur") si vous n'avez pas déjà un compte supporteur.
        </h4>
    }

</section>