<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title - Ristourne Financement À La Carte</title>
        <!-- pour utiliser Jquery UI -->
        @Styles.Render("~/Content/themes/base/css")
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <img src="../../Images/logo.png" alt="Ristourne Logo" id="logoRistourne">
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.ActionLink("Se Délogguer", "LogOut", "LogOut")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Accueil", "Index", "Accueil")</li>
                            <li>@Html.ActionLink("Section Membre", "Index", "Dashboard")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            <section class="main-content">
                <!-- la vue routée est placée ici , _ViewStart est la premiere vu appelée qui set _Layout
                    comme layout principal -->
                @RenderSection("featured", required: false)
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <h6>@DateTime.Now.Year - Site de La Ristourne</h6>
                    <p>Site créé par Daphné Dargis-Cournoyer.</p>
                    <p>Tous droits réservé 2016</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/otf")
        @RenderSection("scripts", required: false)
    </body>
</html>
